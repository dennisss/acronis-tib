{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"lib": [
			"es2017"
		],
		"noImplicitAny": true,
		"removeComments": false,
		"sourceMap": false,
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"outDir": "./dist/",
		"importHelpers": true,
		"declaration": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
